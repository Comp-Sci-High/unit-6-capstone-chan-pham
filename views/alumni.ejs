<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Alumni Success - Alumni</title>
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="alumni.css">
</head>
<body>
    <div class="container">
        <nav class="navbar">
            <div class="nav-left">
                <a class="nav-link" href="/">Home</a>
                <a class="nav-link" href="/transcript">Transcripts</a>
            </div>
            <div class="nav-center">Alumni Success</div>
            <div class="nav-right">
                <a class="nav-link active" href="/alumni">Alumni</a>
                <a class="nav-link" href="/faq">FAQ</a>
            </div>
        </nav>

        <div class="page-container alumni-page fade-in">
            <!-- College Management Section -->
            <div class="college-section">
                <div class="college-header">
                    <h2 class="college-title">College Acceptances</h2>
                    <button class="college-add-btn" title="Add New College">
                        <span>+</span>
                    </button>
                </div>
                
                <div class="college-grid">
                    <% if (colleges && colleges.length > 0) { %>
                        <% for(let i = 0; i < colleges.length; i++){ %>
                            <div class="college-card">
                                <div class="college-actions">
                                    <button class="college-edit-btn" 
                                            data-college-id="<%=colleges[i]._id%>"
                                            data-current-name="<%=colleges[i].name%>"
                                            data-current-image="<%=colleges[i].imageUrl%>"
                                            data-current-count="<%=colleges[i].count%>"
                                            title="Edit College">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="m18 2 4 4-14 14H4v-4L18 2z"/>
                                            <path d="m14.5 5.5 4 4"/>
                                        </svg>
                                    </button>
                                    <button class="college-delete-btn" 
                                            data-college-id="<%=colleges[i]._id%>"
                                            title="Delete College">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <polyline points="3,6 5,6 21,6"></polyline>
                                            <path d="m19,6v14a2,2 0 0,1 -2,2H7a2,2 0 0,1 -2,-2V6m3,0V4a2,2 0 0,1 2,-2h4a2,2 0 0,1 2,2v2"></path>
                                            <line x1="10" y1="11" x2="10" y2="17"></line>
                                            <line x1="14" y1="11" x2="14" y2="17"></line>
                                        </svg>
                                    </button>
                                </div>
                                <img src="<%=colleges[i].imageUrl%>" alt="<%=colleges[i].name%>" class="college-logo">
                                <div class="college-count"><%=colleges[i].count%></div>
                                <div class="college-name"><%=colleges[i].name%></div>
                            </div>
                        <% } %>
                    <% } else { %>
                        <div class="college-card">
                            <img src="https://via.placeholder.com/60x60?text=No+Logo" class="college-logo">
                            <div class="college-count">0</div>
                            <div class="college-name">No colleges added yet</div>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Alumni Section -->
            <div class="alumni-section">
                <div class="alumni-header">
                    <h2 class="alumni-title">Our Alumni</h2>
                    
                </div>
                
                <div class="alumni-cards">
                    <% for(let i = 0; i < alumnis.length; i++){ %>
                        <div class="card">
                            <div class="card-inner">
                                <div class="card-front">
                                    <img src="<%=alumnis[i].image%>" alt="<%=alumnis[i].name%>">
                                </div>
                                <div class="card-back">
                                    <h3 class="card-name">
                                        <%=alumnis[i].name%>
                                        <svg class="edit-icon" data-field="name" data-card-id="<%=alumnis[i]._id%>" data-current-value="<%=alumnis[i].name%>" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="m18 2 4 4-14 14H4v-4L18 2z"/>
                                            <path d="m14.5 5.5 4 4"/>
                                        </svg>
                                    </h3>
                                    <p class="card-college">
                                        <%=alumnis[i].college%>
                                        <svg class="edit-icon" data-field="college" data-card-id="<%=alumnis[i]._id%>" data-current-value="<%=alumnis[i].college%>" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="m18 2 4 4-14 14H4v-4L18 2z"/>
                                            <path d="m14.5 5.5 4 4"/>
                                        </svg>
                                    </p>
                                    <p class="card-year">
                                        <%=alumnis[i].year%>
                                        <svg class="edit-icon" data-field="year" data-card-id="<%=alumnis[i]._id%>" data-current-value="<%=alumnis[i].year%>" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="m18 2 4 4-14 14H4v-4L18 2z"/>
                                            <path d="m14.5 5.5 4 4"/>
                                        </svg>
                                    </p>
                                    <p class="card-major">
                                        <%=alumnis[i].major%>
                                        <svg class="edit-icon" data-field="major" data-card-id="<%=alumnis[i]._id%>" data-current-value="<%=alumnis[i].major%>" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <path d="m18 2 4 4-14 14H4v-4L18 2z"/>
                                            <path d="m14.5 5.5 4 4"/>
                                        </svg>
                                    </p>
                                    <div class="card-achievements">
                                        <p class="card-achievement">
                                            <%=alumnis[i].achievement%>
                                            <svg class="edit-icon" data-field="achievement" data-card-id="<%=alumnis[i]._id%>" data-current-value="<%=alumnis[i].achievement%>" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path d="m18 2 4 4-14 14H4v-4L18 2z"/>
                                                <path d="m14.5 5.5 4 4"/>
                                            </svg>
                                        </p>
                                    </div>
                                    
                                    <!-- Image edit icon (hidden but functional) -->
                                    <svg class="edit-icon" data-field="image" data-card-id="<%=alumnis[i]._id%>" data-current-value="<%=alumnis[i].image%>" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display: none;">
                                        <path d="m18 2 4 4-14 14H4v-4L18 2z"/>
                                        <path d="m14.5 5.5 4 4"/>
                                    </svg>
                                    
                                    <!-- Delete Button -->
                                    <div class="delete-btn" data-card-id="<%=alumnis[i]._id%>">
                                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <polyline points="3,6 5,6 21,6"></polyline>
                                            <path d="m19,6v14a2,2 0 0,1 -2,2H7a2,2 0 0,1 -2,-2V6m3,0V4a2,2 0 0,1 2,-2h4a2,2 0 0,1 2,2v2"></path>
                                            <line x1="10" y1="11" x2="10" y2="17"></line>
                                            <line x1="14" y1="11" x2="14" y2="17"></line>
                                        </svg>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
                
                <!-- Add Alumni Button -->
                <button class="add-btn" title="Add New Alumni">
                    <span>+</span>
                </button>
            </div>
        </div>
    </div>
    <script src="/alumni.js"></script>
</body>
</html>