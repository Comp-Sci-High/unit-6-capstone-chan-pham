    <main>
        <section class="hero">
            <div class="hero-content">
                <h1>Welcome to Alumni Success</h1>
                <p>Your gateway to resources, connections, and success stories</p>
                <a href="#resources" class="btn-primary">Explore Resources</a>
            </div>
