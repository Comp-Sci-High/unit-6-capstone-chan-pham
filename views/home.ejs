    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <div class="navbar">
            <div class="nav-left">
                <a href="/" class="active">Home</a>
                <a href="/transcript">Transcripts</a>
            </div>
            <div class="logo">
                <h1>Alumni Success</h1>
            </div>
            <div class="nav-right">
                <a href="/alumni">Alumni</a>
                <a href="/faq">FAQ</a>
            </div>
            <div class="hamburger">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
        <div class="mobile-menu">
            <a href="/" class="active">Home</a>
            <a href="/transcript">Transcripts</a>
            <a href="/alumni">Alumni</a>
            <a href="/faq">FAQ</a>
        </div>
    </header>

    <main>
        <section class="hero">
            <div class="hero-content">
                <h1>Welcome to Alumni Success</h1>
                <p>Your gateway to resources, connections, and success stories</p>
                <a href="#resources" class="btn-primary">Explore Resources</a>
            </div>
        </section>

        <section id="resources" class="resources">
            <h2>How Can Alumni Success Help You</h2>
            <div class="resources-grid">
                <div class="resource-card">
                    <div class="resource-icon">
                        <i class="fas fa-graduation-cap"></i>
                    </div>
                    <h3>Academic Support</h3>
                    <p>Access tutoring services, study materials, and academic advisors.</p>
                    
                </div>
                <div class="resource-card">
                    <div class="resource-icon">
                        <i class="fas fa-briefcase"></i>
                    </div>
                    <h3>Career Services</h3>
                    <p>Resume reviews, interview prep, and job placement assistance.</p>
                    
                </div>
                <div class="resource-card">
                    <div class="resource-icon">
                        <i class="fas fa-briefcase"></i>
                    </div>
                    <h3>Meet With Team</h3>
                    <p>Resume reviews, interview prep, and job placement assistance.</p>
                    <a href="https://calendly.com/jay-champagne-compscihigh/30min" class="btn-secondary">Book Meeting</a>
                </div>
                <div class="resource-card">
                    <div class="resource-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3>Networking Events</h3>
                    <p>Connect with alumni and industry professionals at our events.</p>
                   
                </div>
                <div class="resource-card">
                    <div class="resource-icon">
                        <i class="fas fa-medal"></i>
                    </div>
                    <h3>Scholarships</h3>
                    <p>Find financial support opportunities for continued education.</p>
                   
                </div>
            </div>
        </section>

        <section class="updates">
            <div class="section-header">
                <h2>Latest Updates</h2>
                <button class="add-btn" id="add-update-btn" title="Add Update">
                    <i class="fas fa-plus"></i>
                </button>
            </div>
            <div class="update-feed" id="update-feed">
                <!-- Update items will be populated by JavaScript -->
            </div>
        </section>

        <section class="important-info">
            <div class="section-header">
                <h2>Important Information</h2>
                <button class="add-btn" id="add-info-btn" title="Add Information">
                    <i class="fas fa-plus"></i>
                </button>
            </div>
            <div class="info-cards" id="info-cards">
                <!-- Info cards will be populated by JavaScript -->
            </div>
        </section>
    </main>

    <footer>
        <div class="footer-content">
            <div class="footer-logo">
                <h2>Alumni Success</h2>
            </div>
            <div class="footer-links">
                <div class="link-group">
                    <h3>Pages</h3>
                    <a href="home.html">Home</a>
                    <a href="transcript.html">Transcripts</a>
                    <a href="alumni.html">Alumni</a>
                    <a href="faq.html">FAQ</a>
                </div>
                <div class="link-group">
                   
                    
                </div>
                <div class="link-group">
                    <h3>Contact</h3>
                    <a href="jay.champagne@compscihigh.org">jay.champagne@compscihigh.org</a>
                    <a href="tel:+11234567890">+1 (123) 456-7890</a>
                </div>
            </div>
            <div class="social-links">
                <a href="#" aria-label="Facebook"><i class="fab fa-facebook-f"></i></a>
                <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
                <a href="#" aria-label="LinkedIn"><i class="fab fa-linkedin-in"></i></a>
                <a href="#" aria-label="https://chat.google.com/dm/iIDCQCAAAAE/XAZmOM9S2Cw/XAZmOM9S2Cw?cls=10"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 Alumni Success. All rights reserved.</p>
        </div>
    </footer>

    <!-- Admin Password Modal -->
    <div id="admin-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2>Admin Access Required</h2>
                <button class="close-btn" id="close-admin-modal">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <form id="admin-form">
                    <div class="form-group">
                        <label for="admin-password">Enter Admin Password:</label>
                        <input type="password" id="admin-password" name="password" required>
                        <div id="password-error" class="error-message" style="display: none;">
                            Incorrect password. Please try again.
                        </div>
                    </div>
                    <div class="form-buttons">
                        <button type="button" class="btn-form secondary" id="cancel-admin">Cancel</button>
                        <button type="submit" class="btn-form primary">Access Admin</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Update Modal -->
    <div id="update-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="update-modal-title">Add Update</h2>
                <button class="close-btn" id="close-update-modal">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <form id="update-form">
                    <div class="form-group">
                        <label for="update-title">Title</label>
                        <input type="text" id="update-title" name="title" required>
                    </div>
                    <div class="form-group">
                        <label for="update-content">Content</label>
                        <textarea id="update-content" name="content" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="update-date">Date</label>
                        <input type="date" id="update-date" name="date" required>
                    </div>
                    <div class="form-group">
                        <div class="checkbox-group">
                            <input type="checkbox" id="update-important" name="important">
                            <label for="update-important">Mark as Important</label>
                        </div>
                    </div>
                    <div class="form-buttons">
                        <button type="button" class="btn-form secondary" id="cancel-update">Cancel</button>
                        <button type="submit" class="btn-form primary">Save Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Info Modal -->
    <div id="info-modal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 id="info-modal-title">Add Information</h2>
                <button class="close-btn" id="close-info-modal">
                    <i class="fas fa-times"></i>
                </button>
            </div>
            <div class="modal-body">
                <form id="info-form">
                    <div class="form-group">
                        <label for="info-title">Title</label>
                        <input type="text" id="info-title" name="title" required>
                    </div>
                    <div class="form-group">
                        <label for="info-content">Content</label>
                        <textarea id="info-content" name="content" required></textarea>
                    </div>
                    <div class="form-group">
                        <label for="info-date">Date</label>
                        <input type="date" id="info-date" name="date" required>
                    </div>
                    <div class="form-buttons">
                        <button type="button" class="btn-form secondary" id="cancel-info">Cancel</button>
                        <button type="submit" class="btn-form primary">Save Information</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="home.js"></script>
</body>
</html>